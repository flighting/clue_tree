<div class="ui grid">
  <div class="left floated fourteen wide column">
    <h3>新增文章</h3>
  </div>
</div>
<div class="ui segment">
  <%= simple_form_for [:admin, @node] do |f| %>
  <div class="fields">
    <div class="twelve wide field">
      <%= f.input :title , require: true%>
    </div>
    <div class="four wide field">
      <%= f.input :region_id, as: :select, collection: Region.all.collect{|r| [r.title,r.id]}, input_html: {class: 'ui fluid dropdown'}, require: true%>
    </div>
  </div>
  <div class="fields">
    <div class="sixteen wide field">

      <%= f.cktext_area :content, cols: 40, ckeditor: { toolbar: 'mini' } %>
      <%#= f.input :content, as: :text, input_html: {rows: 20, class: 'editor'}, require: true %>
    </div>
  </div>
  <div class="actions ">
    <%= f.submit '提交', class: 'ui button primary' %>
    <div class="ui cancel button">取消</div>
  </div>
  <%end%>
</div>